@inherits LayoutComponentBase

<div class="page">
    <header class="header">
        <HeaderContent />
    </header>
    <main class="main">
        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
