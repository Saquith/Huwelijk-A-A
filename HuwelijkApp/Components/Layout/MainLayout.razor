    <span class="dismiss">🗙</span>
</div>

<style lang="scss">
    body {
        box-sizing: border-box;
        margin: 0;
    }
    
    .page {
        max-width: 100%;
        max-height: 100%;

        .header {
            width: 100%;
            height: 100px;
            border-bottom: darkolivegreen solid 1px;
        }
        
        .content {
            width: 100%;
            display: flex;
            flex-direction: row;
        }
    }
</style>