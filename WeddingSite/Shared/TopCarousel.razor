@* Top carousel. Replace images in wwwroot/images or update appsettings.json *@
<div id="topCarousel" class="carousel slide" data-bs-ride="carousel">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="images/carousel1.jpg" class="d-block w-100" alt="First slide" style="max-height:500px;object-fit:cover;">
      <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
        <h3>Welcome to Our Wedding</h3>
        <p>We're excited to celebrate with you.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="images/carousel2.jpg" class="d-block w-100" alt="Second slide" style="max-height:500px;object-fit:cover;">
      <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
        <h3>Ceremony & Reception</h3>
        <p>Find details below.</p>
      </div>
    </div>
    <div class="carousel-item">
      <img src="images/carousel3.jpg" class="d-block w-100" alt="Third slide" style="max-height:500px;object-fit:cover;">
      <div class="carousel-caption d-none d-md-block bg-dark bg-opacity-50 rounded p-2">
        <h3>See Our Photos</h3>
        <p>Memories and moments.</p>
      </div>
    </div>
  </div>
  <button class="carousel-control-prev" type="button" data-bs-target="#topCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#topCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>